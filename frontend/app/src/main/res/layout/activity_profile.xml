<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileActivity">

    <TextView
        android:id="@+id/SSTProfile_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="41dp" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disponible"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="163dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="101dp"
        android:layout_height="65dp"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="268dp">

        <Switch
            android:id="@+id/Switch_SMS"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:text="SMS" />

        <Switch
            android:id="@+id/Switch_Notif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notif" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preférences"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="283dp" />

    <EditText
        android:id="@+id/SSTProfile_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="343dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mot de passe"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="356dp" />

    <TextView
        android:id="@+id/Telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numéro de téléphone"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="216dp" />

    <EditText
        android:id="@+id/SSTProfile_Tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="203dp" />

    <EditText
        android:id="@+id/SSTProfile_Password_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="415dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mot de passe \n(Confimation)"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="415dp" />

    <Button
        android:id="@+id/button_confirmation"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="108dp"
        android:text="Confirmer"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SSTProfile_Password_confirm" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom d'utilisateur"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="128dp" />

    <EditText
        android:id="@+id/SSTProfile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="110dp" />

</androidx.constraintlayout.widget.ConstraintLayout>